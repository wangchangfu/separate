<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapscience.modular.system.mapper.TechnicalPositionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mapscience.modular.system.model.TechnicalPosition">
        <id column="technical_position_id" property="technicalPositionId" />
        <result column="technical_position_name" property="technicalPositionName" />
        <result column="status" property="status" />
        <result column="crate_time" property="crateTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        technical_position_id, technical_position_name, status, crate_time, update_time
    </sql>

    <select id="getTechnicalPositionByName" resultMap="BaseResultMap">
        select * from t_technical_position where technical_position_name = #{technicalPositionName}
    </select>

    <select id="getTechnicalPositionById" resultMap="BaseResultMap">
         select * from t_technical_position where technical_position_id = #{technicalPositionId}
    </select>

</mapper>
