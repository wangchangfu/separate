<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapscience.modular.system.mapper.EmployeeStateMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mapscience.modular.system.model.EmployeeState">
        <id column="employee_state_id" property="employeeStateId"/>
        <result column="employee_state_name" property="employeeStateName"/>
        <result column="status" property="status"/>
        <result column="crate_time" property="crateTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        employee_state_id, employee_state_name, status, crate_time, update_time
    </sql>

    <select id="getEmployeeStateByName" resultMap="BaseResultMap">
        select * from t_employee_state where employee_state_name = #{employeeStateName}
    </select>

    <select id="getEmployeeStateById" resultMap="BaseResultMap">
        select * from t_employee_state where employee_state_id = #{employeeStateId}
    </select>

</mapper>
